<h1>Users</h1>
<table class="table">
  <thead>
    <th>email</th>
    <th></th>
    <td></td>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to "Edit", edit_user_path(user) %></td>
        <td><%= button_to "Remove", user_path(user), class: "btn btn-sm btn-outline-danger", method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
