<%= form_for [@team, @seat] do |f| %>
  <% if @seat.errors.any? %>
    <%= render partial: "shared/error_explanation", locals: { errors: @seat.errors, name: "seat" } %>
  <% end%>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-outline-primary" %>
  <%= link_to "Cancel", back_path, role: "button", class: "btn btn-outline-secondary" %>
<% end %>
