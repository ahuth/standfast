<!DOCTYPE html>
<html>
  <head>
    <title>Standup</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "shared/logout" if user_signed_in? %>
    <%= render "shared/flash" if alert || notice %>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
