<h1>Teams</h1>
<table>
  <thead>
    <th>Name</th>
    <th></th>
    <th></th>
    <td></td>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to "Show", team %></td>
        <td><%= link_to "Edit", edit_team_path(team) %></td>
        <td><%= button_to "Remove", team_path(team), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Team", new_team_path %>
